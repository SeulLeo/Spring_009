<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

<bean id="foo" class="com.zk.myspring.Foo">
<constructor-arg ref="baz1"></constructor-arg>
<constructor-arg ref="bar1"></constructor-arg>
</bean>

<bean id="baz1" class="com.zk.myspring.Baz">
<property name="name" value="baz1"></property>
</bean>

<bean id="bar1" class="com.zk.myspring.Bar">
<property name="name" value="bar1"></property>
</bean>
</beans>